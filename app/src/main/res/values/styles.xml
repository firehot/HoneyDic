<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="App">AppStyle</style>
    <style name="App.Toolbar">
        <item name="android:background">@color/HoneyDic_identity</item>
        <item name="android:height">?attr/actionBarSize</item>
    </style>


    <style name="Animation"/>
    <style name="WordCard">WordCard</style>

    <style name="Animation.DicToast">
        <item name="android:windowEnterAnimation">@anim/dictoast_enter</item>
    </style>

    <style name="WordCard.Background">
        <item name="android:background">@drawable/background_with_shadow</item>
    </style>

    <style name="WordCard.ListView">
        <item name="android:layout_width">300dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>


    <style name="TextStyle">TextStyle</style>
    <style name="TextStyle.Option">
        <item name="android:fontFamily">sans</item>
    </style>

    <style name="TextStyle.Option.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/HoneyDic_identity_900</item>
    </style>

    <style name="TextStyle.Option.Title.Spinner">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/HoneyDic_identity_900</item>
    </style>

    <style name="TextStyle.Option.Description">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/HoneyDic_identity_700</item>
    </style>

    <style name="TextStyle.Option.SpinnerPopup" parent="@android:style/Widget.Spinner">
        <item name="android:background">@color/HoneyDic_identity_100</item>
        <item name="android:height">100dp</item>
    </style>

    <style name="TextStyle.Option.Section">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/HoneyDic_identity_700</item>
    </style>




</resources>




