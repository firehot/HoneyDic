<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HoneyDic_identity_background">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/TextStyle.Option.Section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Option.ClipboardDic"
                android:id="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginTop="24dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/frameLayout"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/HoneyDic_setting_divide"
                android:layout_marginTop="6dp" />

            <TextView
                style="@style/TextStyle.Option.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Option.ClipboardDic.Use"
                android:id="@+id/textView3"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/frameLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="17dp" />

            <TextView
                style="@style/TextStyle.Option.Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/Option.ClipboardDic.Use.Description"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginRight="92dp" />

            <TextView
                style="@style/TextStyle.Option.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Option.ClipboardDic.NoneForceDestroy"
                android:id="@+id/textView5"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4" />

            <TextView
                style="@style/TextStyle.Option.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/Option.ClipboardDic.NoneForceDestroy.Description"
                android:id="@+id/textView6"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:layout_alignRight="@+id/textView4"
                android:layout_alignEnd="@+id/textView4" />

            <TextView
                style="@style/TextStyle.Option.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Option.ClipboardDic.KeepDicToastTime"
                android:id="@+id/textView7"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6" />

            <TextView
                style="@style/TextStyle.Option.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/Option.ClipboardDic.KeepDicToastTime.Description"
                android:id="@+id/textView8"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_alignRight="@+id/textView6"
                android:layout_alignEnd="@+id/textView6" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/HoneyDic_setting_divide"
                android:id="@+id/frameLayout2"
                android:layout_below="@+id/textView13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp" />

            <TextView
                style="@style/TextStyle.Option.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Option.General.UseTTS"
                android:id="@+id/textView9"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/frameLayout2"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8" />

            <TextView
                style="@style/TextStyle.Option.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/Option.General.UseTTS.Description"
                android:id="@+id/textView10"
                android:layout_below="@+id/textView9"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9"
                android:layout_alignRight="@+id/textView8"
                android:layout_alignEnd="@+id/textView8" />

            <TextView
                style="@style/TextStyle.Option.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Option.General.SoundEffect"
                android:id="@+id/textView11"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10" />

            <TextView
                style="@style/TextStyle.Option.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/Option.ClipboardDic.Use.Description"
                android:id="@+id/textView12"
                android:layout_below="@+id/textView11"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11"
                android:layout_alignRight="@+id/textView10"
                android:layout_alignEnd="@+id/textView10"
                android:layout_marginBottom="24dp" />

            <TextView
                style="@style/TextStyle.Option.Section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/Option.General"
                android:id="@+id/textView13"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_marginTop="34dp" />

            <view
                android:layout_width="48dp"
                android:layout_height="48dp"
                class="com.rey.material.widget.CheckBox"
                android:id="@+id/viewCheckBoxUse"
                android:gravity="center_vertical"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:checked="false"
                android:layout_alignBottom="@+id/textView4"
                app:cbd_strokeColor="@drawable/selector_checkbox"/>

            <view
                class="com.rey.material.widget.CheckBox"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/checkBoxNoneForceClose"
                android:gravity="center_vertical"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignLeft="@+id/viewCheckBoxUse"
                android:checked="false"
                android:layout_alignBottom="@+id/textView6"
                app:cbd_strokeColor="@drawable/selector_checkbox"/>

            <view
                class="com.rey.material.widget.CheckBox"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/checkBoxUseTTS"
                android:gravity="center_vertical"
                android:checked="false"
                android:layout_alignTop="@+id/textView9"
                android:layout_alignLeft="@+id/checkBoxNoneForceClose"
                android:layout_above="@+id/textView11"
                app:cbd_strokeColor="@drawable/selector_checkbox"
                />

            <view
                class="com.rey.material.widget.CheckBox"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/checkBoxSoundEffect"
                android:gravity="center_vertical"
                android:checked="false"
                android:layout_alignTop="@+id/textView11"
                android:layout_alignLeft="@+id/checkBoxUseTTS"
                android:layout_alignBottom="@+id/textView12"
                app:cbd_strokeColor="@drawable/selector_checkbox"/>

            <view
                class="com.rey.material.widget.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:id="@+id/viewSpinnerKeepTime"
                app:spn_arrowColor="@color/HoneyDic_identity_700"

                app:spn_arrowSwitchMode="true"
                app:spn_arrowAnimDuration="200"
                app:spn_popupItemAnimation="@anim/spinner_popupitem"
                app:spn_dividerColor="@color/HoneyDic_identity_700"
                app:spn_dividerHeight="1dp"
                app:spn_dividerAnimDuration="200"
                app:spn_dividerPadding="0dp"

                app:spn_arrowAnimClockwise="true"
                android:layout_alignBottom="@+id/textView7"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="3dp" />



        </RelativeLayout>
    </ScrollView>

</FrameLayout>